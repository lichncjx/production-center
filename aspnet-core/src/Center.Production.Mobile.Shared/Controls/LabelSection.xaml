<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Center.Production.Controls.LabelSection">
    
    <ContentView.Padding>
        <OnCenter x:TypeArguments="Thickness">
            <On Center="iOS">16,24,16,4</On>
            <On Center="Android">16,16,16,4</On>
        </OnCenter>
    </ContentView.Padding>
    
    <ContentView.Content>
        <Label Style="{DynamicResource SectionLabelTextStyle}" x:Name="SectionLabel"/>
    </ContentView.Content>
</ContentView>
