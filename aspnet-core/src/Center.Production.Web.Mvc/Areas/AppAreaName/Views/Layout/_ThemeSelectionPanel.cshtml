                    <a href="#" data-theme="default" class="nav-link m-tabs__link text-center @(activeTheme == AppConsts.ThemeDefault ? "active" : "") theme-selection-link" data-toggle="tab" role="tab">
                        <img src="@(ApplicationPath)Common/Images/metronic-themes/default.png" width="250" />
                        <span class="theme-name">@L(AppConsts.ThemeDefault.ToPascalCase())</span>
                    </a>
                </li>
                <li class="nav-item m-tabs__item">
