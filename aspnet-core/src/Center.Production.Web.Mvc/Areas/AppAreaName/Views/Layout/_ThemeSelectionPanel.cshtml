@using Abp.Extensions
@using Center.Production
@using Center.Production.Configuration
@{
    var activeTheme = await SettingManager.GetSettingValueAsync(AppSettings.UiManagement.Theme);
}

<!-- begin::Quick Sidebar -->
<div id="m_theme_selection_panel" class="m-quick-sidebar m-quick-sidebar--tabbed m-quick-sidebar--skin-light">
